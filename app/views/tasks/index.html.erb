<div class="container">
  <h1>タスク一覧</h1>
  <table>
    <thead>
      <tr>
        <th>タスク名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td class='btn edit'><%= link_to '編集', edit_task_path(task) %></td>
          <td class="btn"><%= link_to '削除', task_path(task), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="add"><%= link_to '追加', new_task_path %></div>
</div>